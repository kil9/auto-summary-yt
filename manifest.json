{
  "name": "auto-summary-yt",
  "description": "Open Gemini with the current YouTube URL in split view.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "windows", "storage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/index.html",
  "commands": {
    "open-gemini": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Gemini and insert the current YouTube URL"
    }
  }
}
